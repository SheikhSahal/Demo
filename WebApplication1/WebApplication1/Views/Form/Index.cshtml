
@{
    ViewBag.Title = "Index";
}

<div class="alert alert-success message" role="alert">
    Record Insert Successfully..!
</div>

<form>
    <div class="form-group Name">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" placeholder="Enter Name">
        <span class="error"><i class="fas fa-exclamation-circle"></i>&nbsp; Please enter Name</span>
    </div>
    <div class="form-group Email">
        <label for="Email">Email address</label>
        <input type="text" class="form-control" id="Email" placeholder="Enter email">
        <span class="error"><i class="fas fa-exclamation-circle"></i>&nbsp;Please enter E-mail</span>
    </div>
    <div class="form-group Age">
        <label for="Age">Age</label>
        <input type="number" class="form-control" id="Age" placeholder="Enter Age">
        <span class="error"><i class="fas fa-exclamation-circle"></i>&nbsp;Please enter age</span>
    </div>
    <button type="submit" class="btn btn-primary" id="submit">Submit</button>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {

        $('#submit').click(function (e) {
            e.preventDefault();

            var isAllValid = true;

            if (!($('#Name').val().trim() != '')) {
                isAllValid = false;
                $('.Name .error').css('display', 'block');
            }
            else {
                $('.Name .error').css('display', 'none');
            }

            var isAllValid = true;

            if (!($('#Email').val().trim() != '')) {
                isAllValid = false;
                $('.Email .error').css('display', 'block');
            }
            else {
                $('.Email .error').css('display', 'none');
            }

            var isAllValid = true;

            if (!($('#Age').val().trim() != '')) {
                isAllValid = false;
                $('.Age .error').css('display', 'block');
            }
            else {
                $('.Age .error').css('display', 'none');
            }

            if (isAllValid) {
                var data = {
                    E_name: $('#Name').val(),
                    E_age: $('#Age').val(),
                    E_Email: $('#Email').val(),
                }
                debugger

                $.ajax({
                    type: 'POST',
                    url: '/Form/Index',
                    data: {
                        'E_name': data.E_name,
                        'E_age': data.E_age,
                        'E_Email': data.E_Email,
                    }
                    ,
                    success: function (resp) {
                        if (resp.status) {
                            $('.message').delay(300).fadeIn();
                            $('.message').delay(200).fadeOut();

                            setTimeout(function () {
                                window.location.href = '@Url.Action("Index", "Home")';
                            }, 3000);
                        }
                        else {
                            alert("Error");
                            //$('.message').delay(300).fadeIn();
                            //$('.message').delay(200).fadeOut();
                            //$('#message').removeClass('alert-success').addClass('alert-danger');
                            //$('#alt-msge').text("This E-mail address or password is invalid.");
                        }
                    }
                });
            }


        });


    });
</script>

<style>
    span.error {
        display: none;
        color: #d93025;
        font-size: 80%;
        margin-top: 3px;
    }
    .message{
        display:none;
    }
</style>